<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/productView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:baselineAligned="false">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:src="@drawable/image_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_weight="1"
                    android:text="Seagate 4TB Drive"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Time used:"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/product_time"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Y Years, M months, D days"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/warrenty_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Warranty expire in:"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/warranty_time"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Y Years, M months, D days"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/delete_product"
                    android:layout_width="37dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="340dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_delete_black_24dp" />

                <TextView
                    android:id="@+id/warranty_time"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text=" "
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>